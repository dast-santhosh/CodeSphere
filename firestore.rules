
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is an admin
    // This reads the user's profile from the 'users' collection to check the 'role' field
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- USERS COLLECTION ---
    match /users/{userId} {
      // Users can read/write their own profile
      // Admins can read/write ANY profile (essential for approval dashboard)
      allow read: if isSignedIn(); // Allow read for all signed in users so directory works
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    // --- LESSONS COLLECTION ---
    match /lessons/{lessonId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // --- CLASSES COLLECTION (Live Schedule) ---
    match /classes/{classId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
